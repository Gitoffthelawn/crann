{
  "name": "crann",
  "version": "2.0.1",
  "description": "Effortless State Synchronization for Web Extensions",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    },
    "./react": {
      "types": "./dist/types/react/index.d.ts",
      "require": "./dist/cjs/react.js",
      "import": "./dist/esm/react.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:js",
    "build:ts": "tsc --emitDeclarationOnly --outDir dist",
    "build:js": "node esbuild.config.js",
    "build-test": "npm run build && cd tests/extension && npm run build",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "web-extension",
    "browser-extension",
    "extension",
    "browser",
    "state",
    "message",
    "chrome",
    "firefox",
    "safari",
    "edge",
    "mv3"
  ],
  "author": "Marc O'Cleirigh",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.2.0",
    "@types/react": "^18.2.32",
    "@types/react-dom": "^18.2.10",
    "@types/uuid": "^10.0.0",
    "@types/webextension-polyfill": "^0.10.7",
    "esbuild": "^0.23.0",
    "esbuild-node-externals": "^1.14.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.5.4",
    "webextension-polyfill": "^0.12.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moclei/crann"
  },
  "bugs": {
    "url": "https://github.com/moclei/crann/issues"
  },
  "homepage": "https://github.com/moclei/crann#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
